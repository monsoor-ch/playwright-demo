modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Framework"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test All"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install @playwright/test @azure/storage-blob nodemailer imap-simple ssh2-sftp-client winston dotenv @types/node"

[[workflows.workflow]]
name = "Test Framework"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx playwright test tests/config/framework-setup.spec.ts --reporter=list"

[[workflows.workflow]]
name = "Test All"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx playwright test --reporter=list"
